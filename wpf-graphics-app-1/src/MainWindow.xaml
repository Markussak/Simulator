<Window x:Class="wpf_graphics_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spacetime Geometry Simulator" Height="700" Width="1000"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Panel with Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2D2D30" Padding="10">
            <Button x:Name="btnAddObject" Content="Add Object" Margin="5" Padding="8,3" Click="OnAddObjectClick"/>
            <Button x:Name="btnCalculateGeodesic" Content="Calculate Geodesic" Margin="5" Padding="8,3" Click="OnCalculateGeodesicClick"/>
            <Button x:Name="btnReset" Content="Reset Simulation" Margin="5" Padding="8,3" Click="OnResetClick"/>
            <Button x:Name="btnRunQuantumSimulation" Content="Run Quantum Simulation" Margin="5" Padding="8,3" Click="OnRunQuantumSimulationClick"/>
            <ComboBox x:Name="cmbVisualizationMode" Width="150" Margin="5" SelectedIndex="0" SelectionChanged="OnVisualizationModeChanged">
                <ComboBoxItem Content="Spacetime Grid"/>
                <ComboBoxItem Content="Gravitational Field"/>
                <ComboBoxItem Content="Geodesic Paths"/>
            </ComboBox>
            <Slider x:Name="sldTimeScale" Width="150" Margin="5" Minimum="0.1" Maximum="10" Value="1" 
                    TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="OnTimeScaleChanged"/>
            <TextBlock Text="Time Scale:" VerticalAlignment="Center" Margin="5" Foreground="White"/>
            <TextBlock x:Name="txtTimeScaleValue" Text="1.0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
        </StackPanel>
        
        <!-- Main 3D Viewport -->
        <Viewport3D x:Name="mainViewport" Grid.Row="1" ClipToBounds="True">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="camera" Position="0,0,5" LookDirection="0,0,-1" UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>
            
            <!-- Default lighting -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#333333"/>
                        <DirectionalLight Color="#FFFFFF" Direction="-1,-1,-1"/>
                        <DirectionalLight Color="#CCCCCC" Direction="1,1,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
            
            <!-- Coordinate axes for reference -->
            <ModelVisual3D x:Name="coordinateAxes">
                <ModelVisual3D.Content>
                    <GeometryModel3D>
                        <GeometryModel3D.Geometry>
                            <MeshGeometry3D 
                                Positions="-10,0,0 10,0,0 0,-10,0 0,10,0 0,0,-10 0,0,10"
                                TriangleIndices="0 1 0 2 3 2 4 5 4"/>
                        </GeometryModel3D.Geometry>
                        <GeometryModel3D.Material>
                            <DiffuseMaterial>
                                <DiffuseMaterial.Brush>
                                    <SolidColorBrush Color="White"/>
                                </DiffuseMaterial.Brush>
                            </DiffuseMaterial>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
        
        <!-- Bottom Panel with Information -->
        <Grid Grid.Row="2" Background="#2D2D30" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock x:Name="txtSimulationInfo" Text="Simulation Information" Foreground="White" Margin="5"/>
                <TextBlock x:Name="txtObjectCount" Text="Objects: 0" Foreground="White" Margin="5"/>
                <TextBlock x:Name="txtCurrentTime" Text="Simulation Time: 0.0" Foreground="White" Margin="5"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnStartSimulation" Content="Start Simulation" Margin="5" Padding="8,3" Click="OnStartSimulationClick"/>
                <Button x:Name="btnPauseSimulation" Content="Pause" Margin="5" Padding="8,3" Click="OnPauseSimulationClick" IsEnabled="False"/>
                <Button x:Name="btnStepSimulation" Content="Step" Margin="5" Padding="8,3" Click="OnStepSimulationClick"/>
            </StackPanel>
        </Grid>
        
        <!-- Object Properties Dialog -->
        <Grid x:Name="objectPropertiesDialog" Grid.Row="1" Visibility="Collapsed" Background="#99000000">
            <Border Width="400" Height="300" Background="#2D2D30" CornerRadius="5" Padding="20">
                <StackPanel>
                    <TextBlock Text="Object Properties" FontSize="18" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Name:" Grid.Column="0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBox x:Name="txtObjectName" Grid.Column="1" Text="New Object"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Mass (kg):" Grid.Column="0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBox x:Name="txtObjectMass" Grid.Column="1" Text="1.0e30"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Position:" Grid.Column="0" VerticalAlignment="Center" Foreground="White"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="txtObjectPosX" Width="60" Text="0"/>
                            <TextBox x:Name="txtObjectPosY" Width="60" Margin="5,0" Text="0"/>
                            <TextBox x:Name="txtObjectPosZ" Width="60" Text="0"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Velocity:" Grid.Column="0" VerticalAlignment="Center" Foreground="White"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="txtObjectVelX" Width="60" Text="0"/>
                            <TextBox x:Name="txtObjectVelY" Width="60" Margin="5,0" Text="0"/>
                            <TextBox x:Name="txtObjectVelZ" Width="60" Text="0"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="btnCancelObject" Content="Cancel" Width="80" Margin="5" Click="OnCancelObjectClick"/>
                        <Button x:Name="btnAddObjectConfirm" Content="Add" Width="80" Margin="5" Click="OnAddObjectConfirmClick"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>